<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="221dp"
            android:layout_height="155dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="92dp" android:id="@+id/linearLayout">
        <Button
                android:text="Dry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnDry"/>
        <Button
                android:text="Standard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnStandard"/>
        <Button
                android:text="Selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnSelection"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="552dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="  "
                android:ems="10"
                android:id="@+id/txtInput"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>